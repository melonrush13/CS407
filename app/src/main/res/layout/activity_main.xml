<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/main_activity"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#F5A20A">


    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Take Quiz"
    android:id="@+id/takeQuizButton"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:onClick="takeQuiz" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exitButton"
        android:layout_below="@+id/takeQuizButton"
        android:layout_alignRight="@+id/takeQuizButton"
        android:layout_alignEnd="@+id/takeQuizButton"
        android:layout_alignLeft="@+id/takeQuizButton"
        android:layout_alignStart="@+id/takeQuizButton"
        android:onClick="exitApp"
        />



</RelativeLayout>
